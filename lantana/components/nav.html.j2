{# navコンポーネント
    ページ一覧を表示するリスト
    forを再帰的に回している #}

<div class="col-12 col-md-2 print-hide">
    <div class="collapse d-md-block text-nowrap" id="nav" style="overflow-x:scroll;">
        <ul class="list-group list-group-flush">
            {% for nav_item in nav recursive %}
            {% if not nav_item.children %}
            <li class="list-group-item"><a
                    class="text-decoration-none {% if not nav_item.active %} text-muted{% else %} text-body{% endif %}"
                    href="{{ nav_item.url|url }}">{{ nav_item.title }}</a></li>
            {% else %}
            <li class="list-group-item">
                <a class="nav_cop {% if not nav_item.active %} text-muted{% else %} text-body{% endif %}"
                    aria-expanded="false" data-bs-toggle="collapse" role="button">{{ nav_item.title }}</a>
                <ul class="collapse list-group list-group-flush {% if nav_item.active %}show{% endif %} ">
                    {{ loop(nav_item.children) }}
                </ul>
            </li>
            {% endif %}
            {% endfor %}
        </ul>
    </div>
</div>